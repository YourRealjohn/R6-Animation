--// Crouch Animation & Tool Setup
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

-- Remove existing "Crouch" tool if already exists
for _, v in pairs(player.Backpack:GetChildren()) do
    if v:IsA("Tool") and v.Name == "Crouch" then
        v:Destroy()
    end
end
for _, v in pairs(character:GetChildren()) do
    if v:IsA("Tool") and v.Name == "Crouch" then
        v:Destroy()
    end
end

-- Create Tool
local tool = Instance.new("Tool")
tool.RequiresHandle = false
tool.Name = "Crouch"
tool.Parent = player.Backpack

-- Animation
local crouchAnim = Instance.new("Animation")
crouchAnim.AnimationId = "rbxassetid://287325678"
local crouchTrack = humanoid:LoadAnimation(crouchAnim)

-- Store default WalkSpeed
local defaultWalkSpeed = humanoid.WalkSpeed

-- Equip logic
tool.Equipped:Connect(function()
    humanoid.WalkSpeed = 3
    crouchTrack:Play()
end)

tool.Unequipped:Connect(function()
    humanoid.WalkSpeed = defaultWalkSpeed
    crouchTrack:Stop()
end)

